include ../mixins/_icon

div.uk-margin-medium-top(uk-slider="finite: true; sets: true;")
  div.uk-position-relative
    //- loader
    div.uk-text-center(mu-if="loading")
      div(uk-spinner)
      
    //- error
    div.uk-text-warning.uk-text-center(mu-if="error")
      +icon('warning')(class="uk-margin-small-right")
      span(mu-html="error")

    //- slider
    div.uk-grid-small.uk-flex-middle(uk-grid)

      div(class="uk-visible@m")
        a(href="#"
          uk-slidenav-previous
          uk-slider-item="previous")

      div.uk-width-expand.uk-slider-container
        ul(uk-grid class="uk-slider-items " +
                  "uk-child-width-1-3 " +
                  "uk-child-width-1-4@m " +
                  "uk-child-width-1-5@l " +
                  "uk-grid-small " +
                  "uk-grid-match")

          //- product tile
          li.mu-product-slider-item(mu-each="items" mu-each-as="item")
            article.tm-product-card(mu-product-tile product="item")
            
      div(class="uk-visible@m")
        a(href="#"
          uk-slider-item="next"
          uk-slidenav-next)

  ul(class="uk-slider-nav " +
            "uk-dotnav " +
            "uk-flex-center " +
            "uk-margin-medium-top " +
            "uk-hidden@m")
  
  //- div(mu-debug="items")
extends /layouts/_informational

block vars
  -
    page = {
      title: 'Reviews',
      breadcrumbs: {}
    }

    informationalActivePage = 'reviews'

block informational
  article(class="uk-card " +
                "uk-card-default " +
                "uk-card-small " +
                "uk-card-body " +
                "uk-article " +
                "tm-ignore-container")

    //- div.tm-wrapper
    //-   figure.tm-ratio.tm-ratio-16-9.js-map(
    //-     data-latitude="59.9356728"
    //-     data-longitude="30.3258604"
    //-     data-zoom="14")

    div(class="uk-child-width-1-1 uk-child-width-1-2@s uk-margin-top"
            uk-grid)

      section.uk-width-1-1
        h2.uk-text-center Write a Review
        form(mu-form)
          div.uk-grid-small.uk-child-width-1-1(uk-grid)
            div
              label
                div.uk-form-label.uk-form-label-required Name
                input.uk-input(type="text" required)
            div
              label
                div.uk-form-label.uk-form-label-required Email
                input.uk-input(type="email" required)
            div
              label
                div.uk-form-label Product Category
                select.uk-select
                  each category in catalog
                    if category.items
                      each subcategory in category.items
                        option #{subcategory}
            div
              label
                div.uk-form-label Review Message
                textarea.uk-textarea(rows="5")

            div(class="uk-width-auto uk-width-expand@s uk-flex uk-flex-middle uk-text-meta")
                        a.uk-margin-small-right.tm-action-button-active(
                            mu onclick="this.mu.ui.notification('Ratings Received','success')"
                            uk-tooltip="Rating")
                            +icon("star") 
                            +icon("star") 
                            +icon("star") 
                            +icon("star") 
                            +icon("star") 
                            
                    
                            
            div.uk-text-center
              p.uk-text-muted (Thank you for taking time to review)
              button.uk-button.uk-button-primary Send
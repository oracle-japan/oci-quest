extends _default

block vars

block default
  section.uk-section.uk-section-small
    div.uk-container
      div.uk-grid-medium.uk-child-width-1-1(uk-grid)

        div.uk-text-center
          if page.breadcrumbs
            ul.uk-breadcrumb.uk-flex-center.uk-margin-remove
              li: a(href="index.html" mu-route) Home
              each href, breadcrumb in page.breadcrumbs
                li: a(href= href mu-route)= breadcrumb
              if page.muTitle
                li
                  span(mu mu-html="page.title")
                    |...
              else if page.title
                li: span= page.title
          if page.muTitle
            h1.uk-margin-small-top.uk-margin-remove-bottom(mu mu-html="page.title")
              |...
          else if page.title
            h1.uk-margin-small-top.uk-margin-remove-bottom= page.title
          //- if page.quantity
            div.uk-text-meta.uk-margin-xsmall-top #{page.quantity} items

        div
          block pages